{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "." ,
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@app/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@theme/*": ["./src/theme/*"],
      "@json/*": ["./src/json/*"]
    },
  }
}